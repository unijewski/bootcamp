<%= form_for @car do |f| %>
  <% if @car.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@car.errors.count, "error") %> prohibited
      this car from being saved:</h2>
    <ul>
    <% @car.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :registration_number %><br>
    <%= f.text_field :registration_number %>
  </p>

  <p>
    <%= f.label :model %><br>
    <%= f.text_field :model %>
  </p>

  <p>
    <% if @car.image.present? %>
      <%= f.label :image %><br>
      <%= image_tag @car.image.thumb('400x200#').url if @car.image_stored? %><br/>
      <%= f.file_field :image %>
      <%= f.label :remove_image %>
      <%= f.check_box :remove_image %>
    <% else %>
      <%= f.label :image %><br>
      <%= f.file_field :image %>
    <% end %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
