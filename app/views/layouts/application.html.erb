<!DOCTYPE html>
<html>
<head>
  <title><%= page_title %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'layouts/flash' %>
  <p>
  <% if current_person %>
    Welcome, <%= current_person.full_name %> | <%= link_to 'Sign out', session_path(session), method: :delete %> |
    <%= link_to 'Cars', cars_path if current_person %> |
    <%= link_to 'Parkings', parkings_path %> |
    <%= link_to 'Place rents', place_rents_path if current_person %>
  <% else %>
    <%= link_to 'Sign in', new_session_path %> |
    <%= link_to 'Sign up', new_account_path %> |
    <%= link_to 'Parkings', parkings_path %>
  <% end %>
  </p>

  <%= yield %>

</body>
</html>
