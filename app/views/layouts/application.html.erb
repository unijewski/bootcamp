<!DOCTYPE html>
<html>
<head>
  <title><%= page_title %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'layouts/flash' %>
  <p>
  <% if current_person %>
    <%= t(:welcome) %> <%= current_person.full_name %> | <%= link_to t(:sign_out), session_path(session), method: :delete %> |
    <%= link_to t(:cars), cars_path if current_person %> |
    <%= link_to t(:parkings), parkings_path %> |
    <%= link_to t(:place_rents), place_rents_path if current_person %>
  <% else %>
    <%= link_to t(:sign_in), login_path %> |
    <%= link_to t(:sign_up), register_path %> |
    <%= link_to t(:parkings), parkings_path %>
  <% end %>
  </p>

  <%= yield %>

</body>
</html>
