<%= form_tag parkings_path, method: 'get' do %>
  <p>
    <%= label_tag :kind_private, t('label.private') %>
    <%= check_box_tag :kind_private, '1', params[:kind_private] %>
    <%= label_tag :kind_public, t('label.public') %>
    <%= check_box_tag :kind_public, '1', params[:kind_public] %><br>
  </p>
  <p>
    <%= label_tag :day_price_start_range, t('label.day_price_from') %>
    <%= text_field_tag :day_price_start_range, params[:day_price_start_range] %>
    <%= label_tag :day_price_end_range, t('label.day_price_to') %>
    <%= text_field_tag :day_price_end_range, params[:day_price_end_range] %><br>
  </p>
  <p>
    <%= label_tag :hour_price_start_range, t('label.hour_price_from') %>
    <%= text_field_tag :hour_price_start_range, params[:hour_price_start_range] %>
    <%= label_tag :hour_price_end_range, t('label.hour_price_to') %>
    <%= text_field_tag :hour_price_end_range, params[:hour_price_end_range] %><br>
  </p>
  <p>
    <%= label_tag t('label.city') %>
    <%= text_field_tag :city, params[:city] %>
  </p>
  <%= submit_tag t('search') %>
<% end %>
<br>
